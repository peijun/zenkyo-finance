<p style="color: green"><%= notice %></p>

<h1>出金伝票一覧</h1>

<div id="admins_slips">
  <table class="table-auto">
      <thead>
        <th class="px-4 py-2">伝票番号</th>
        <th class="px-4 py-2">金額</th>
        <th class="px-4 py-2">支払先</th>
        <th class="px-4 py-2">リンク</th>
      </thead>
      <tbody>
      <% @admins_slips.each do |admins_slip| %>
        <%= render admins_slip %>
        <tr>
          <th class="border px-4 py-2"><%= admins_slip.number %></th>
          <th class="border px-4 py-2"><%= admins_slip.amount %></th>
          <th class="border px-4 py-2"><%= admins_slip.payee %></th>
          <th class="border px-4 py-2"><%= link_to "Show this slip", [:admins, admins_slip] %></th>
        </tr>
      <% end %>
      </tbody>
  </section>
</div>

<button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"><%= link_to "出金伝票登録", new_admins_slip_path %></button>
