<%= form_with(model: [:admins, @admins_slip]) do |form| %>
  <% if admins_slip.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(admins_slip.errors.count, "error") %> prohibited this admins_slip form being saved:</h2>

      <ul>
        <% admins_slip.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-4">
    <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="slip_number">伝票番号</label>
    <%= form.number_field :number %>  
  </div>
  <div class="mb-4">
    <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="slip_payee">支出先</label>
    <%= form.text_field :payee %>  
  </div>
  <div class="mb-4">
    <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="slip_amount">金額</label>
    <%= form.number_field :amount %>  
  </div>
  <div class="mb-4">
    <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="slip_issue_date">領収書発行日</label>
    <%= form.date_field :issue_date %>  
  </div>
  <div class="mb-4">
    <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="slip_supplement">補足</label>
    <%= form.text_field :supplement %>
  </div>
  <div class="mb-4">
    <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="slip_sspn_id">特別支出許可番号</label>
    <%= form.collection_select :sspn_id,Sspn.all, :id, :number %>
  </div>
  <div class="mb-4">
    <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="slip_account">会計単位</label>
    <%= form.text_field :account %>
  </div>
  <div class="mb-4">
    <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="slip_year">会計年度</label>
    <%= form.number_field :year %>
  </div>
    <div class="mb-4">
    <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="slip_user_id">出金ユーザー</label>
    <%= form.collection_select :user_id,User.all, :id, :email %>
  </div>
  <div class="mb-4">
    <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="slip_reimbursement">出金元</label>
    <%= form.select :reimbursement,[['団体',0],['個人',1]] %>
  </div> 
  <div class="actions">
    <button class="flex-shrink-0 bg-teal-500 hover:bg-teal-700 border-teal-500 hover:border-teal-700 text-sm border-4 text-white py-1 px-2 rounded"><input type="submit" name="commit" value="確定" data-disable-with="Create Slip"></button>
  </div>
<% end %>